<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/containerFormTambahPenilaian"
    android:background="@drawable/bg_outlined_gray"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemNisFormPenilaian"
        tools:text="232323"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/textColorPrimary"
        android:layout_weight="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemNamaSiswaFormPenilaian"
        tools:text="232323"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/textColorPrimary"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_5sdp"/>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_5sdp"
        android:hint="@string/label_nilai"
        android:layout_weight="1">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tfNilaiItemSiswa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textColor="@color/textColorSecondary"
            android:textSize="@dimen/_11ssp" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/itemTambahFormPenilaian"
        android:text="@string/label_button_tambah_nilai"
        android:textSize="@dimen/_11ssp"
        android:textColor="@color/primary"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/_5sdp"
        android:textAlignment="center"/>
</LinearLayout>