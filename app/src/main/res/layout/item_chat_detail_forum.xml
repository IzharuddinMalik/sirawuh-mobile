<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_delete_dialog"
    android:layout_marginHorizontal="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_10sdp"
    android:padding="@dimen/_10sdp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemNamaChatForum"
        tools:text="Syauqi"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textColorPrimary"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvItemPesanChatForum"
        tools:text="Pesan chat forum"
        android:textSize="@dimen/_12ssp"
        android:textColor="@color/textColorPrimary"
        android:layout_marginTop="@dimen/_5sdp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_3sdp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemKelasChatForum"
            tools:text="9A"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/textColorSecondary"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvItemDateChatForum"
            tools:text="12:00:00 12 November 2023"
            android:textSize="@dimen/_10ssp"
            android:textColor="@color/textColorSecondary"
            android:textAlignment="textEnd"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>